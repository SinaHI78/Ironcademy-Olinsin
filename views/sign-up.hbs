<div class="authentication-form">

  <form action="/authentication/sign-up" method="POST">
    <label for="input-name">Name</label>
    <input type="text" id="input-name" name="name" placeholder="Your name..." />
    <label for="input-email">Email</label>
    <input
      type="email"
      id="input-email"
      name="email"
      placeholder="Your email address..."
    />
    <label for="input-password">Password</label>
    <input
      type="password"
      name="password"
      id="input-password"
      placeholder="A strong password"
    />
    <span class="authentication-button">
      <button>Sign Up</button>
      <p>Already signed up? <a href="/authentication/sign-in">Sign in!</a></p>
    </span>
  </form>

</div>