<div>

  <div>

    <h1>Welcome to IronCademy!</h1>
    <p>Your place for cool courses</p>

    <h3>Here are the most popular courses:</h3>
  </div>

  {{#each courses}}
    <div>
      <br />
      <a href="/course/{{_id}}">{{title}}</a>
      <br />
      {{#if picture}}
        <img id="course-picture" src="{{picture}}" alt="" />
      {{/if}}
      <br />
      {{schedule}}
      <br />
      {{cost}}
      <br />
      <form method="POST" action="/authentication/course/{{_id}}/enroll">
        <button>Enroll</button>
      </form>
      <hr />
    </div>
  {{/each}}

  <a href="/authentication/course-create">Create your own course!</a>
</div>