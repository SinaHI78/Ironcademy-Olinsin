<body>
<div>
    <h1 class="fs-1 fw-1">Welcome to IronCademy!</h1>
    <p>Your platform for fun learning and creating courses</p>
</div>
  <a href="/authentication/course-create">Create your own course!</a>

    <h3>Our most popular courses:</h3>

<section class="row row-cols-3">  
  {{#each courses}} 
    <div class="album py-3 px-0 bg-light">
      <div class="container">
        <div class="row row-cols-1">
          <div class="col-20">
            <div class="card shadow-sm">
              {{#if picture}}
              <img src="{{picture}}" alt="course_picture" width="100%"> 
              {{else}}
              <img src="/images/developer.JPG" alt="lake" width="100%" height="225">
              {{/if}} 
              <title>Placeholder</title>
              <rect width="100%" height="100%" fill="#55595c"></rect>
              <text x="50%" y="50%" fill="#eceeef" dy=".3em"><a href="/course/{{_id}}">{{title}}</a></text>           
              <div class="card-body">
                <p class="card-text">
                  This is a wider card with supporting text below as a natural
                  lead-in to additional content. This content is a little bit
                  longer.
                </p>
                <div class="d-flex justify-content-center align-items-center">
                  <div class="btn-group btnColour">
                    <form method="POST" action="/course/{{course._id}}">
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary "
                    >
                      View
                    </button>
                    </form>
                    <form method="POST" action="/authentication/course/{{_id}}/enroll">                    
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >
                      Enroll
                    </button>
                    </form>
                    {{#if liked}}
                      <form method="POST" action="/authentication/course/{{_id}}/unlike">
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >
                      Like
                    </button>
                    </form>
                    {{else}}
                    <form method="POST" action="/authentication/course/{{_id}}/like">
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary"
                    >
                      Like
                    </button>
                    </form>
                    {{/if}}
                    </div>
                   </div>
                  </div>
                    <small class="text-muted">Likes:{{likeCounter}}</small>
                </div>
              </div>
            </div>
          </div>   
         </div>       
       </div>
     </div>
    </div>
  {{/each}}
</section> 
</body>    

      

  
