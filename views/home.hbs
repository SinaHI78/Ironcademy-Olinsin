<div id="banner">
    <h1 class="fs-1 fw-1">Welcome to IronCademy!</h1>
    <p>Your platform for fun learning and creating courses</p>
    <br/>
      <a type="button" id="create-course" href="/course/course-create">Create your own course!</a>
</div>
<h3>Our most popular courses:</h3>
      {{#each courses}}
          <div class="col">
            <div class="card shadow-sm">
            {{#if picture}}
              <img src="{{picture}}" alt="course_picture" width="100%" height="225"> 
            {{/if}}
              <title>Placeholder</title>
              <rect width="100%" height="100%" fill="#55595c"></rect>
              <text x="50%" y="50%" fill="#eceeef" dy=".3em"><a href="/course/course/{{_id}}">{{title}}</a></text>           
            <div class="card-body">
                <p class="card-text">
                 {{description}}
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <form action="/course/course/{{_id}}">
                    <button
                      class="btn btn-sm btn-outline-secondary"
                    >
                      View
                    </button>
                    </form>
                    <form method="POST" action="/course/course/{{_id}}/enroll">                    
                    <button
                      class="btn btn-sm btn-outline-secondary"
                    >
                      Enroll
                    </button>
                    </form>
                    
                    {{#if liked}}
                      <form method="POST" action="/course/course/{{_id}}/unlike">
                    <button
                      class="btn btn-sm btn-outline-secondary"
                    >
                      Liked
                    </button>
                    </form>
                    {{else}}
                    <form method="POST" action="/course/course/{{_id}}/like">
                    <button
                      class="btn btn-sm btn-outline-secondary">                  
                      Like
                    </button>
                    </form>
                    {{/if}}
                    <span>Likes:{{likeCounter}}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
  {{/each}}              
  
