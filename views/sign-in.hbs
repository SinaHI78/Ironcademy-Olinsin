<div class="authentication-form">

  <form action="/authentication/sign-in" method="POST">
    <label for="input-email">Email</label>
    <input
      type="email"
      id="input-email"
      name="email"
      placeholder="Your Email"
    />
    <label for="input-password">Password</label>
    <input
      type="password"
      name="password"
      id="input-password"
      placeholder="Your password"
    />
    <span class="authentication-button"><button>Sign In</button></span>
  </form>
  <h5>Not singed up? <a href="/authentication/sign-in">Sign up!</a></h5>
</div>