<h1>Edit your course:</h1>

<form
  method="POST"
  action="/creator/course/:id/edit"
  enctype="multipart/form-data"
>

  <input type="text" name="title" value="{{course.id.name}}" />
  <textarea name="description" value="{{course.id.description}}"></textarea>
  <input type="text" name="cost" value="{{course.id.cost}}" />
  <input type="text" name="schedule" value="{{course.id.schedule}}" />
  <input type="file" name="picture" accept="image/*" name="picture" />

  <button>Edit your course!</button>
</form>